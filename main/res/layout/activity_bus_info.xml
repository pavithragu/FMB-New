<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusInfo">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="Bus Name"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/busName_busInfoActivity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:text="Find My Bus"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="Bus Number"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/busNumber_busInfoActivity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="TN 00 AZ 000"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="Bus Type"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/busType_busInfoActivity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="Private Bus"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="Bus Capacity"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text=":"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/busCapacity_busInfoActivity"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15dp"
                tools:ignore="SpUsage"
                android:text="55 + 2"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_busInfoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"/>

</RelativeLayout>