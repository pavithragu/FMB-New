<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StagesActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_stagesActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromACTV"
                android:singleLine="true"
                android:drawableStart="@drawable/stage_green"
                android:drawablePadding="10dp"
                android:completionThreshold="1"
                android:hint="@string/from"
                android:layout_margin="15dp"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toACTV"
                android:singleLine="true"
                android:drawableStart="@drawable/stage_red"
                android:drawablePadding="10dp"
                android:completionThreshold="1"
                android:layout_below="@id/fromACTV"
                android:hint="@string/to"
                android:layout_marginHorizontal="15dp"/>

            <Button
                android:id="@+id/button_stagesActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toACTV"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#3F51B5"
                android:textColor="@color/White"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20dp"
                android:text="@string/find_buses" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>