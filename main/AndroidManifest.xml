<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.findmybus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindMyBus">
        <activity
            android:name=".StagesInfoActivity"
            android:exported="false" />
        <activity
            android:name=".StageInfoActivity"
            android:exported="false" />
        <activity
            android:name=".BusInfo"
            android:exported="false"
            android:label="Bus Details"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".HelpActivity"
            android:exported="false"
            android:label="Helpline"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".StagesActivity"
            android:exported="false"
            android:label="Select Stages"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".StageActivity"
            android:exported="false"
            android:label="Available Stages"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".BusActivity"
            android:exported="false"
            android:label="Available Buses"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:theme="@style/splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>